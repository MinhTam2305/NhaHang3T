@model IEnumerable<MenuOrder.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align:center;">QUẢN LÝ TÀI KHOẢN</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTypeAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdTypeAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>

            <a href="@Url.Action("Details", "Account",new {id=item.Id})" class="btn btn-sm btn-info" name="details">
                <i class='bx bxs-detail'></i>
            </a>

            <a href="@Url.Action("Delete", "Account",new {id=item.Id})" class="btn btn-sm btn-danger" name="update">
                <i class='bx bxs-message-square-x'></i>
            </a>
            <a href="@Url.Action("Edit", "Account",new {id=item.Id})" class="btn btn-sm btn-warning" name="update">
                <i class='bx bx-cog'></i>
            </a>
        </td>
    </tr>
}

</table>
