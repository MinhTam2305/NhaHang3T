@model IEnumerable<MenuOrder.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align:center;">QUẢN LÝ NHÂN VIÊN</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameStaff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPhone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameStaff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberPhone)
        </td>
        <td>


          
            <a href="@Url.Action("Delete", "Staff",new {id=item.IdStaff})" class="btn btn-sm btn-danger" name="update">
                <i class='bx bxs-message-square-x'></i>
            </a>
            <a href="@Url.Action("Edit", "Staff",new {id=item.IdStaff})" class="btn btn-sm btn-warning" name="update">
                <i class='bx bx-cog'></i>
            </a>
        </td>
    </tr>
}

</table>
