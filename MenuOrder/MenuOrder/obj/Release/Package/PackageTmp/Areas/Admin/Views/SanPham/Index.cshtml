@using MenuOrder.Models
@using PagedList.Mvc;
@model PagedList.PagedList<MenuOrder.Models.Food>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)<text>...</text>
    }
}
<h2 style="text-align:center;">QUẢN LÝ MÓN ĂN</h2>
<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th width="120px">
            Tên sản phẩm
        </th>
        <th>

            Số lượng
        </th>
        <th>

            Giá
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Danh mục
        </th>
        <th width="150px">
                Hình
            </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Truncate(item.NameFood, 50)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.FormatValue(item.Price, "{0:#,##0}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFC)
            </td>
             <td>
                    <img src="~/img/products/@item.anh" style="width:100px;" />
                </td>
             <td>


                 @Html.ActionLink("Details", "Details", new { id = item.IdFood }) |
                 @Html.ActionLink("Edit", "Edit", new { id = item.IdFood }) |
                 @Html.ActionLink("Delete", "Delete", new { id = item.IdFood })
             </td>
        </tr>
    }

</table>
<div>
        Trang @(Model.PageCount < Model.PageNumber ? 0 :Model.PageNumber)/@Model.PageCount
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>
    <style>
        .MenuTrang {
            display: inline;
            text-align: center;
        }
    </style>


