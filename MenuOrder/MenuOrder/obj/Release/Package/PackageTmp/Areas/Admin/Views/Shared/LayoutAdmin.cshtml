<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/cropperjs/dist/cropper.min.css">
    @Styles.Render("~/Content/cssFIgure/Admin.css")
    @Styles.Render("~/Content/PagedList.css")
   

</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>

    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="@Url.Action("Index","Home")" class="nav_logo">
                    <i class='bx bx-layer nav_logo-icon'></i>
                    <span class="nav_logo-name">Admin</span>
                </a>
                <div class="nav_list">
                    <a href="@Url.Action("Index","SanPham")" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Quản lý Sản Phẩm</span>
                    </a>
                    <a href="@Url.Action("Index","Account")" class="nav_link">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name">Quản lý Tài Khoản</span>
                    </a>
                    <a href="@Url.Action("Index","Staff")" class="nav_link">
                        <i class='bx bx-message-square-detail nav_icon'></i>
                        <span class="nav_name">Quản lý Nhân Viên</span>
                    </a>
                    <a href="@Url.Action("Index","FoodCategory")" class="nav_link">
                        <i class='bx bx-bookmark nav_icon'></i>
                        <span class="nav_name">Quản lý Danh Mục Sản Phẩm</span>
                    </a>
                    <a href="@Url.Action("Index","Bill")" class="nav_link">
                        <i class='bx bx-folder nav_icon'></i>
                        <span class="nav_name">Chi tiết Bill</span>
                    </a>
                    <a href="@Url.Action("Index","Detailbill")" class="nav_link">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Quản lý Chi Tiết Bill</span>
                    </a>
                </div>
            </div>
            <a href="@Url.Action("DangXuat","Home")" class="nav_link">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">Sign Out</span>
            </a>
        </nav>
    </div>

    </nav>
    </div>

    <div class="height-100 bg-light">
        @RenderBody()
    </div>

