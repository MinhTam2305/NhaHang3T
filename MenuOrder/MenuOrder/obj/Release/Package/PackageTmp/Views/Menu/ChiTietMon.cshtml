@model MenuOrder.Models.Food
@{
    ViewBag.Title = "ChiTietMon";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>
    /*.container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }*/

    .h2 {
        color: #333;
    }

    .p {
        margin-bottom: 15px;
        line-height: 1.5;
    }

    .input[type="text"] {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .a {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4caf50;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .a:hover {
            background-color: #45a049;
        }

    .thumbnail {
        cursor: pointer;
        transition: transform 0.2s;
        width: 120px;
        height: 135px;
    }

        .thumbnail:hover {
            transform: scale(1.1);
        }

    .main-image {
        width: 100%;
        height: auto;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/products/@Model.anh" class="img-fluid main-image" />
            <div class="row mt-3">
            </div>
        </div>
        <div class="col-md-8">
            <h2>@Model.NameFood</h2>
            @*<p style="color:black"><b>Chi tiết sản phẩm</b> @Html.Raw(@Model.moTa.ToString().Replace("\n", "</p><p>"))</p>*@
            <p style="color:black">Số lượng: @Model.Quantity</p>
            <p>Giá: @string.Format("{0:#,##0,0}", Model.Price) VND</p>
            <div class="form-inline">
                <a href="@Url.Action("Create", "GioHang", new { ms = Model.IdFood, url = Request.Url.ToString() })">
                    <i class="fal fa-shopping-cart cart"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="container">
    <h2 class="h2">Đánh giá</h2>
    <p>

        Đánh giá sản phẩm:
        <input class="input" type="text" size="50" id="noidung" name="noidung" />

        <a class="a" style=" text-decoration: none" onclick="setSession()" id="feedbackLink" href="@Url.Action("AddFeekback", "Figure", new { id = Model.IdFood, url = Request.Url.ToString() })">Thêm Phản Hồi</a>

    </p>
    @*   <p class="p">-------------------Đã đánh giá-------------------</p>
        @Html.Action("FeekBack", "Figure", new { id = Model.IdFood })*@
</div>
<script>
    function setSession() {
        var inputValue = document.getElementById('noidung').value;


        document.cookie = "nd=" + inputValue + "; path=/";


    }
</script>
<script>
    function changeImage(element) {
        var mainImage = document.querySelector('.main-image');
        mainImage.src = element.src;
    }
</script>

