@using MenuOrder.Models
@using PagedList.Mvc;
@model PagedList.PagedList<MenuOrder.Models.Food>
<div class="pro-container">
    @foreach (var product in Model)
    {
        <div class="pro">
            <a href="@Url.Action("ChiTietMon", "Menu", new { id = product.IdFood })">
                <img src="~/img/products/@product.anh" class="pro-1">
            </a>
            <div class="des">
                <h5><a href="@Url.Action("ChiTietMon", "Menu", new { id = product.IdFood })">@product.NameFood</a></h5>
                <div class="start">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <h4><a href="@Url.Action("ChiTietMon", "Menu", new { id = product.IdFood })">@string.Format("{0:#,##0,0}", @product.Price)</a></h4>
            </div>
            <a href="@Url.Action("ThemGioHang","GioHang", new { ms = product.IdFood, url =Request.Url.ToString() })">
                <i class="fal fa-shopping-cart cart"></i>
            </a>
        </div>
    }
</div>
<div class="right-align">
    <a href="~/DanhMuc/Index/2" id="myLink">Xem tất cả</a>
</div>


