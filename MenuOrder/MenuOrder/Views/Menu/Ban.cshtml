@model IEnumerable<MenuOrder.Models.FoodTable>

<script>
    // Load giá trị đã lưu từ localStorage (hoặc sessionStorage) vào combobox khi trang được tải lại
    window.onload = function () {
        var selectedValue = localStorage.getItem("selectedTable");
        if (selectedValue) {
            document.getElementById("trangthai").value = selectedValue;
        }
    };

    // Lưu giá trị đã chọn vào localStorage khi người dùng thay đổi tùy chọn
    function kiemTraChonOption() {
        var selectBox = document.getElementById("trangthai");
        var selectedValue = selectBox.options[selectBox.selectedIndex].value;
        localStorage.setItem("selectedTable", selectedValue);
        document.cookie = "selectedTable=" + selectedValue + "; path=/";
    }
</script>
<style>
    .form-control{
        width:135%
    }
</style>
<div class="form-group">
    <div class="col-md-10">
        <select name="trangthai" id="trangthai" class="form-control" onchange="kiemTraChonOption()" required>
        
            @foreach (var item in Model)
            {
                <option value="@item.IdTable">Bàn @item.IdTable</option>
            }
        </select>
    </div>
</div>
