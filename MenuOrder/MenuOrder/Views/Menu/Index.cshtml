<script>

   // Kiểm tra nếu ViewBag.HoaDon không null
    if (@Html.Raw(Json.Encode(Session["HoaDon"])) != null) {
        // Hiển thị thông báo SweetAlert2 với nội dung từ ViewBag.HoaDon
        Swal.fire({
            title: 'Thông báo',
            text: '@Html.Raw(Json.Encode(Session["HoaDon"]))',
            icon: 'info',
            confirmButtonText: 'Đóng'
        }).then(() => {
            // Đặt giá trị của ViewBag.HoaDon về null
            @{ Session["HoaDon"] = null; }
        });
    }
    document.getElementById("sortOptions").onchange = function () {
        var selectedOption = this.value;
        if (selectedOption !== "#") {
            window.location = selectedOption; // Chuyển hướng đến URL được chọn
        }
    };

</script>

