

<style>
    /* CSS */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    #hero {
        width: 100%;
        height: auto;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        /* Add your styling for the hero section if needed */
    }

    .slider {
        width: 100%;
        overflow: hidden;
        position: relative;
    }


    .slides {
        display: flex;
        transition: transform 1s ease-in-out;
    }

    .slide {
        width: 100vw; /* Width based on viewport width */
    }

    .hinh {
        width: 100%;
        height: auto;
    }


    .navigation-auto,
    .navigation-manual {
        display: flex;
    }

    .auto-btn,
    .manual-btn,
    .prev-btn,
    .next-btn {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background-color: #333;
        margin: 0 5px;
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        color: #fff;
        text-align: center;
        line-height: 15px;
        font-size: 12px;
    }

        .auto-btn:hover,
        .manual-btn:hover,
        .prev-btn:hover,
        .next-btn:hover {
            background-color: #555;
        }

    .prev-btn {
        left: 5px;
    }

    .next-btn {
        right: 5px;
    }

    /* Update positioning for navigation buttons */
    .prev-btn,
    .next-btn {
        z-index: 1;
    }

    .prev-btn {
        left: 50px;
    }

    .next-btn {
        right: 50px;
    }

    /* JavaScript */

</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var counter = 1;
        var totalSlides = document.querySelectorAll('.slide').length;
        var slideWidth = document.querySelector('.slide').clientWidth;

        setInterval(function () {
            nextSlide();
        }, 5000);

        document.getElementById('nextBtn').addEventListener('click', function () {
            nextSlide();
        });

        document.getElementById('prevBtn').addEventListener('click', function () {
            prevSlide();
        });

        function nextSlide() {
            counter = (counter % totalSlides) + 1;
            updateSlide();
        }

        function prevSlide() {
            counter = (counter - 2 + totalSlides) % totalSlides + 1;
            updateSlide();
        }

        function updateSlide() {
            document.getElementById('radio' + counter).checked = true;
            document.querySelector('.slides').style.transform = 'translateX(' + (-slideWidth * (counter - 1)) + 'px)';
        }
    });</script>


<section id="hero">

    <div class="slider">
        <div class="slides">

            @Html.Action("HinhSlider", "Menu")

        </div>

    </div>
   @* <div class="prev-btn" id="prevBtn">&lt;</div>
    <div class="next-btn" id="nextBtn">&gt;</div>
*@
</section>


