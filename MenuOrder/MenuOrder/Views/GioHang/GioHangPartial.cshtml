@model IEnumerable<MenuOrder.Models.DetailBill>

@foreach (var detail in Model)
{
    using (Html.BeginForm("CapNhatGioHang", "GioHang", new { id = detail.IdDetailBill }))
    {
        <tr>
            <td>@detail.Food.NameFood</td>
            <td>
                <input style="font-family:Arial; font-size:15px;text-align:center;width:80px" type="number" min="1" name="txtSoLuong" value=" @detail.Quality" />
            </td>
            <td>@string.Format("{0:#,##0,0}", detail.PriceDetailBill)</td>
            <td style="text-align: center; color: blue">@Html.ActionLink("Xóa", "XoaGioHang", new { id = detail.IdDetailBill })</td>
            <td style="text-align:center"><input type="submit" value="Cập nhật" /></td>
        </tr>
        }
    }
