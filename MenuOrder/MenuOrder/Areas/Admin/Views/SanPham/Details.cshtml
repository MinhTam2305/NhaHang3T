@model MenuOrder.Models.Food

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }
</style>
<h2 style="text-align:center">Chi Tiết Món Ăn</h2>

<div>
    <h4>MÓN ĂN</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameFood)
        </dd>

        <dt>
       
      
            Giá
        </dt>

        <dd>
            @Html.FormatValue(@Model.Price, "{0:#,##0}") VNĐ
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoodCategory.FoodCategory1)
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            <img src="~/img/products/@Model.anh" alt=" @Model.NameFood">
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.IdFood }) |
    @Html.ActionLink("Back to List", "Index")
</p>