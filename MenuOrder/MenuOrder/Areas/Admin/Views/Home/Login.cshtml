
@{

    Layout = null;
}



<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

    <link href="~/Content/cssFIgure/Login.css" rel="stylesheet" />
</head>

    

        <div class="showcase">
            <div class="video-container">
                <video src="img/Anime Japanese Sunset Live Wallpaper.mp4" autoplay muted loop id="myVideo"></video>
            </div>
        </div>
        
            <div class="main">
                <form action="~/Admin/Home/Login" method="post" class="form" id="form-1">

                    <h3 class="heading">Đăng nhập</h3>



                    <div class="spacer"></div>

                    <div class="form-group">
                        <label for="fullname" class="form-label">Tên đầy đủ</label>
                        <input id="UserName" name="UserName" type="text" placeholder="Tài khoản" class="form-control" required>
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input id="Password" name="Password" type="password" placeholder="Mật khẩu" class="form-control" required>
                        <span class="form-message"></span>
                    </div>
                    <button class="form-submit">Đăng nhập</button>
                  



                </form>

                <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
                <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
            </div>
            <script src="main.js"></script>
      
